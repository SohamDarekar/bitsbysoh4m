---
import { getReadingTime } from '../utils/readingTime';

interface Props {
  title: string;
  description: string;
  date: string;
  url: string;
  content: string;
}

const { title, description, date, url, content } = Astro.props;
const readingTime = getReadingTime(content);

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="mb-4 md:mb-6 lg:mb-8 p-4 md:p-5 lg:p-6 rounded-lg border border-gray-200 dark:border-gray-600 hover:border-primary-200 dark:hover:border-primary-400 transition-all">
  <a href={url} class="no-underline">
    <h2 class="text-lg md:text-xl lg:text-2xl font-semibold text-gray-900 dark:text-gray-200 mb-2 hover:text-primary-800 dark:hover:text-primary-300 transition-colors">{title}</h2>
    <div class="text-xs md:text-sm text-gray-600 dark:text-gray-300 mb-2 md:mb-3">
      <time datetime={date}>{formattedDate}</time>
      <span class="mx-2">â€¢</span>
      <span>{readingTime} min read</span>
    </div>
    <p class="text-sm md:text-base lg:text-lg text-gray-700 dark:text-gray-400">{description}</p>
  </a>
</article>