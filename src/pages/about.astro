---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const about = await getEntry('about', 'about');
const { Content } = await about.render();
---

<BaseLayout title="About Me | bitsbysoh4m">
  <div class="about-container">
    <article class="about-content prose prose-sm sm:prose lg:prose-lg prose-slate dark:prose-invert mx-auto prose-headings:dark:text-gray-100 prose-hr:border-gray-600">
      <Content />
    </article>
  </div>
</BaseLayout>

<style>
  .about-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .about-content {
    color: var(--theme-text);
    animation: slideUp 0.6s ease-in-out;
  }

  .connect-section {
    margin-top: 3rem;
    text-align: center;
    animation: fadeIn 0.8s ease-in-out;
  }

  .social-logos {
    margin-top: 1rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--theme-text);
    transition: transform 0.2s, color 0.2s;
    padding: 0.5rem;
  }

  .social-link:hover {
    transform: translateY(-3px);
    color: var(--theme-accent);
  }

  /* Animations */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideUp {
    from { 
      opacity: 0;
      transform: translateY(20px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Remove redundant styling now handled by prose classes */
  :global(.about-content h1),
  :global(.about-content h2),
  :global(.about-content p) {
    /* These will be handled by prose classes */
  }

  /* Media query adjustments */
  @media (max-width: 768px) {
    /* Keep any specific mobile overrides */
    .social-links-large {
      grid-template-columns: 1fr;
    }
  }

  .connect-section {
    margin-top: 3rem;
    text-align: center;
    animation: fadeIn 0.8s ease-in-out;
  }

  .connect-section h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
  }

  .connect-section p {
    margin-bottom: 2rem;
    color: var(--theme-text);
    opacity: 0.8;
  }

  .social-links-large {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .social-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 1rem;
    background-color: var(--theme-card-bg, rgba(255, 255, 255, 0.6));
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: 10px;
    transition: transform 0.2s, box-shadow 0.2s;
    text-decoration: none;
    color: var(--theme-text);
  }

  :global(.dark) .social-card {
    background-color: rgba(26, 26, 26, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .social-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
  }

  :global(.dark) .social-card:hover {
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .social-card svg {
    margin-bottom: 1rem;
    color: var(--theme-accent, #3b2f7e);
  }

  :global(.dark) .social-card svg {
    color: #ded7fe;
  }

  .social-card span {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--theme-text);
  }

  .social-card p {
    font-size: 0.9rem;
    text-align: center;
    margin: 0;
    color: var(--theme-text);
    opacity: 0.7;
  }
</style>
